<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_ndk_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NDK Thread"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_ndk_method_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NDK Call Java Method"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ndk_thread" />
    <Button
        android:id="@+id/btn_ndk_socket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NDK Socket"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ndk_method_call" />

</androidx.constraintlayout.widget.ConstraintLayout>